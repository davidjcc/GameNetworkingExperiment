namespace Game;

table Vec2 {
	x: float;
	y: float;
}


table ClientConnectedMessage {
	test_data: string;
}

table ClientReadyMessage {
}

table ClientDisconnectedMessage {
}

table PlayerMovedMessage {
	pos: Vec2;
}

table BallMovedMessage {
	pos: Vec2;
}

union AnyMessage {
	ClientConnectedMessage,
	ClientDisconnectedMessage,
	ClientReadyMessage,
	PlayerMovedMessage,
	BallMovedMessage
}

table Message {
	payload: AnyMessage;
}

root_type Message;



